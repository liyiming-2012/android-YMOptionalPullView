<?xml version="1.0" encoding="utf-8"?>
<com.yiming.optionalpullview.YMOptionalPullView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/opv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00bb88"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#ff00bbbb"
            android:padding="10dp"
            android:text="This is a LinearLayout! " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:background="#ff2288aa"
            android:padding="10dp"
            android:text="Support more View" />
    </RelativeLayout>

</com.yiming.optionalpullview.YMOptionalPullView>