<?xml version="1.0" encoding="utf-8"?>
<com.yiming.optionalpullview.YMOptionalPullView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/opv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/tb_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="下拉开启"
                    android:textOff="下拉关闭"
                    android:checked="true"/>
                <ToggleButton
                    android:id="@+id/tb_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="上拉开启"
                    android:textOff="上拉关闭"
                    android:checked="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ffeeffff"
                android:text="TextView"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ffccffff"
                android:text="TextView"/>
            <TextView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ffaaeeee"
                android:text="TextView"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff88dddd"
                android:text="TextView"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff66cccc"
                android:text="TextView"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff44bbbb"
                android:text="TextView"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff22aaaa"
                android:text="TextView"/>
            <TextView
                android:layout_width="310dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff009999"
                android:text="TextView"/>
            <TextView
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#ff008888"
                android:text="TextView"/>
        </LinearLayout>
    </ScrollView>

</com.yiming.optionalpullview.YMOptionalPullView>